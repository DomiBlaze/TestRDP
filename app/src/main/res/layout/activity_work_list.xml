<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.atizik.testrdp.WorkListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nothing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp" />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_below="@+id/fioTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text=""
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/dateView"
            android:layout_alignBottom="@+id/dateView"
            android:layout_below="@+id/dateView"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/fioTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="TextView" />

        <TableLayout
            android:id="@+id/works"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button_date"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:elevation="1dp">

        </TableLayout>

        <TextView
            android:id="@+id/nothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/works"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="На выбранную дату работ нет"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
